  body, input, select, textarea
    font-size: 13pt
    letter-spacing: 0.025em
    line-height: 1.5em

  header
    br
      display: none

    &.major
      padding-bottom: 1em

    &.special
      padding-left: 1.5em
      padding-right: 2.5em

  footer
    &.major
      padding-top: 1.5em

  .wrapper
    margin-bottom: 3em

    &.special
      br
        display: none

    &.style1
      padding: 0 2.5em

    &.style2
      background-size: cover

    &.style4
      padding: 2.5em

  #banner
    background-size: cover

  #main
    background-size: cover

  #cta
    background-size: cover
    padding: 3em
